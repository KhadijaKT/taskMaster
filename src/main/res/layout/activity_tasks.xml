<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="@id/logo"
            app:layout_constraintEnd_toStartOf="@+id/profile_icon" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Navigation Menu -->
        <LinearLayout
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo">

            <ImageView
                android:id="@+id/dashboard_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:tint="#53655C"
                android:src="@drawable/ic_home"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Dashboard" />

            <ImageView
                android:id="@+id/tasks_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:tint="#53655C"
                android:src="@drawable/ic_list"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Tasks" />

            <ImageView
                android:id="@+id/employees_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:tint="#53655C"
                android:src="@drawable/ic_employees"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Employees" />

            <ImageView
                android:id="@+id/reports_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:tint="#53655C"
                android:src="@drawable/ic_report"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Reports" />

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:tint="#53655C"
                android:src="@drawable/ic_settings"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Settings" />

            <ImageView
                android:id="@+id/notifications_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:tint="#53655C"
                android:src="@drawable/ic_notifications"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Notifications" />
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTasks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/item_task_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nav_menu"
            app:layout_constraintBottom_toTopOf="@id/assign_task_button" />

        <!-- Assign Task Button -->
        <Button
            android:id="@+id/assign_task_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Assign a Task"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/greenish_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>