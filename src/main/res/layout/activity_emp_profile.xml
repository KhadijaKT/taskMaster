<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Add ViewModel bindings here if needed -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF9F6"
        android:padding="24dp">

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            app:tint="@color/muted_beige"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="4dp" />

        <!-- Info Container (CardView) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/info_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/profile_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Employee Name -->
                <TextView
                    android:id="@+id/employee_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#22252B"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Employee Email -->
                <TextView
                    android:id="@+id/employee_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="john.doe@example.com"
                    android:textSize="22sp"
                    android:textColor="#22252B"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/employee_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Password Row -->
                <LinearLayout
                    android:id="@+id/password_row"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/employee_email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/employee_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="••••••••"
                        android:textSize="18sp"
                        android:textColor="#22252B" />

                    <ImageView
                        android:id="@+id/eye_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eye"
                        app:tint="@color/muted_beige"
                        android:contentDescription="Show Password"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Change Password Button (Inside Card) -->
                <Button
                    android:id="@+id/change_password_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/muted_beige"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/password_row"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
