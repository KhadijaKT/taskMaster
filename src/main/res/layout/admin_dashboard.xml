<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E8EB"
        android:padding="16dp">

        <!-- Top Bar -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#22252B"
            app:layout_constraintEnd_toStartOf="@+id/profile_icon"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="@id/logo" />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_profile"
            app:tint="#22252B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Navigation Menu -->
        <LinearLayout
            android:id="@+id/nav_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/logo">

            <ImageView
                android:id="@+id/dashboard_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_home"
                app:tint="#53655C"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Dashboard" />

            <ImageView
                android:id="@+id/tasks_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_list"
                app:tint="#53655C"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Tasks" />

            <ImageView
                android:id="@+id/employees_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_employees"
                app:tint="#53655C"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Employees" />

            <ImageView
                android:id="@+id/reports_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_report"
                app:tint="#53655C"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Reports" />

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_settings"
                app:tint="#53655C"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Settings" />

            <ImageView
                android:id="@+id/notifications_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_notifications"
                app:tint="#53655C"
                android:layout_marginHorizontal="8dp"
                android:contentDescription="Notifications" />
        </LinearLayout>

        <!-- Stats Cards - First Row -->
        <androidx.cardview.widget.CardView
            android:id="@+id/tasks_card"
            android:layout_width="0dp"
            android:layout_height="330dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#A3AEB1"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toStartOf="@+id/completed_tasks_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nav_menu">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/tasks_icon_image"
                    android:layout_width="178dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_total"
                    app:tint="#22252B"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tasks_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Tasks"
                    android:textColor="#22252B"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tasks_icon_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tasks_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textColor="#22252B"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/completed_tasks_card"
            android:layout_width="0dp"
            android:layout_height="330dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#53655C"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tasks_card"
            app:layout_constraintTop_toBottomOf="@id/nav_menu">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/completed_icon"
                    android:layout_width="178dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_completed"
                    app:tint="#E5E8EB"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/completed_tasks_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textColor="#E5E8EB"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/completed_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/completed_tasks_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="#E5E8EB"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stats Cards - Second Row -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pending_tasks_card"
            android:layout_width="0dp"
            android:layout_height="330dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#B09F95"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toStartOf="@+id/deleted_tasks_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tasks_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/pending_icon"
                    android:layout_width="176dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_pending"
                    app:tint="#22252B"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/pending_tasks_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textColor="#22252B"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/pending_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/pending_tasks_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="#22252B"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/deleted_tasks_card"
            android:layout_width="0dp"
            android:layout_height="330dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#22252B"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pending_tasks_card"
            app:layout_constraintTop_toBottomOf="@+id/completed_tasks_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/deleted_icon"
                    android:layout_width="178dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_deleted"
                    app:tint="#E5E8EB"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/deleted_tasks_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deleted"
                    android:textColor="#E5E8EB"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/deleted_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/deleted_tasks_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="#E5E8EB"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

