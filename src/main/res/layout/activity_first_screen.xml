<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Add variables here if needed -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FB"
        android:padding="24dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/textViewAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TaskEr"
            android:textColor="@color/dark_grey"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" />

        <!-- Admin Button -->
        <Button
            android:id="@+id/buttonAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I am Admin"
            android:textColor="@color/light_grey"
            android:backgroundTint="@color/greenish_grey"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/textViewAppTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Employee Button -->
        <Button
            android:id="@+id/buttonEmployee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I am Employee"
            android:textColor="@color/light_grey"
            android:backgroundTint="@color/greenish_grey"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/buttonAdmin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
