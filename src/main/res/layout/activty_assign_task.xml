<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_backarrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Back"
            app:tint="@color/dark_grey" />

        <!-- Title -->
        <TextView
            android:id="@+id/page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Assign New Task"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/back_button" />

        <!-- Form Container -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            app:layout_constraintBottom_toTopOf="@id/create_task_button"
            android:layout_marginTop="24dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Task Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Name"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/task_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/feild_background"
                    android:padding="12dp"
                    android:hint="Enter task name"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Task Details -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Details"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/task_details_input"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="top"
                    android:background="@drawable/feild_background"
                    android:padding="12dp"
                    android:hint="Enter task details"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="16dp"/>

                <!-- Assign To -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assign To"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/employee_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/feild_background"
                    android:paddingStart="8dp"
                    android:spinnerMode="dropdown"
                    tools:listitem="@android:layout/simple_spinner_dropdown_item"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Create Task Button -->
        <Button
            android:id="@+id/create_task_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Create Task"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/greenish_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>