<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Add ViewModel or variables here if needed -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF9F6"
        android:padding="16dp"
        tools:context=".EmployeeTasksActivity">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Tasks"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#22252B"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="@id/logo"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/profile_icon" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_profile"
            app:tint="#22252B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Navigation Menu -->
        <LinearLayout
            android:id="@+id/nav_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/logo">

            <ImageView
                android:id="@+id/dashboard_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_home"
                app:tint="@color/muted_beige"
                android:layout_marginHorizontal="12dp"
                android:contentDescription="Dashboard" />

            <ImageView
                android:id="@+id/tasks_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_list"
                app:tint="@color/muted_beige"
                android:layout_marginHorizontal="12dp"
                android:contentDescription="Tasks" />

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/muted_beige"
                android:layout_marginHorizontal="12dp"
                android:contentDescription="Settings" />

            <ImageView
                android:id="@+id/notifications_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_notifications"
                app:tint="@color/muted_beige"
                android:layout_marginHorizontal="12dp"
                android:contentDescription="Notifications" />
        </LinearLayout>

        <!-- RecyclerView for Task Cards -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTasks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            tools:listitem="@layout/item_emp_task_card"
            app:layout_constraintTop_toBottomOf="@id/nav_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
